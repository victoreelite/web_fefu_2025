[Unit]
Description=FEFU Lab (Gunicorn)
After=network.target postgresql.service

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/fefu_lab

EnvironmentFile=/etc/fefu_lab/fefu_lab.env
Environment="PATH=/var/www/fefu_lab/venv/bin"

ExecStart=/var/www/fefu_lab/venv/bin/gunicorn \
    --config /var/www/fefu_lab/deploy/gunicorn/config.py \
    web_2025.wsgi:application

Restart=always
RestartSec=3
PrivateTmp=true

[Install]
WantedBy=multi-user.target